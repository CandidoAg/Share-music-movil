<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.share_music_movil.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_fav"
        android:name="com.example.share_music_movil.ui.fav.favFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_fav" />

    <fragment
        android:id="@+id/navigation_playlist"
        android:name="com.example.share_music_movil.ui.playlist.playlistFragment"
        android:label="PlayList"
        tools:layout="@layout/fragment_playlist" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.share_music_movil.ui.profile.profileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
